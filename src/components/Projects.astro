---
import ProjectCard from './ProjectCard';
import SmallProjectCard from './SmallProjectCard';

const mainProjects = [
  {
    title: "Shisha Log - シーシャ記録Webアプリケーション",
    description: "シーシャで利用したフレーバーを手軽に記録・管理できるWebアプリケーション。ユーザーは自身のシーシャ体験を記録し、後から見返すことでより良いシーシャ体験の再現に役立てることができます。",
    technologies: [
      { name: "Go (Echo v4)", color: "cyan" },
      { name: "AWS Lightsail", color: "orange" },
      { name: "Terraform", color: "purple" },
      { name: "Docker", color: "green" },
      { name: "Supabase", color: "indigo" },
      { name: "S3/CloudFront", color: "yellow" }
    ],
    prPoint: "Go言語によるAPIサーバーの構築に加え、AWSの各種サービスとTerraformを組み合わせ、インフラをコードとして管理（IaC）する体制を整えました。再現性が高く、保守性に優れたインフラを構築。",
    links: [
      { url: "https://shisha.toof.jp", text: "Visit Site", icon: "🔗" },
      { url: "https://github.com/toof-jp/shisha-log", text: "GitHub", icon: "📦" }
    ],
    gradient: "from-green-400 to-blue-500"
  },
  {
    title: "ニコニココミュニティ掲示板 全文検索アプリケーション",
    description: "ニコニコ動画のコミュニティ掲示板に投稿された内容を、キーワードで高速に全文検索できるWebアプリケーション。",
    technologies: [
      { name: "Rust (axum, SQLx)", color: "orange" },
      { name: "React", color: "blue" },
      { name: "Vite", color: "purple" },
      { name: "Tailwind CSS", color: "green" },
      { name: "Cloudflare Pages", color: "yellow" },
      { name: "PostgreSQL", color: "indigo" }
    ],
    prPoint: "パフォーマンスを重視し、バックエンドにはRustを採用。フロントエンドはReactによるSPAとして構築し、Cloudflare Pagesでホスティングすることで、高速なレスポンスと高いスケーラビリティを実現。",
    links: [
      { url: "https://github.com/toof-jp/bbs-search-frontend", text: "Frontend", icon: "📦" },
      { url: "https://github.com/toof-jp/bbs-search-backend", text: "Backend", icon: "📦" }
    ],
    gradient: "from-purple-400 to-pink-500"
  }
];

const otherProjects = [
  {
    title: "掲示板レス取得Discord Bot",
    description: "指定した範囲のニコニコのコミュニティ掲示板のレスを取得するDiscord Bot",
    technologies: [
      { name: "Rust", color: "orange" },
      { name: "Discord API", color: "blue" }
    ],
    link: { url: "https://github.com/toof-jp/bbs-fetch-post-discord-bot", text: "View on GitHub" }
  },
  {
    title: "ニコニコ掲示板 Discord投稿Bot",
    description: "Discordのメッセージをニコニコのコミュニティ掲示板に投稿するBot",
    technologies: [
      { name: "Rust", color: "orange" },
      { name: "Discord API", color: "blue" }
    ],
    link: { url: "https://github.com/toof-jp/bbs-discord-bot", text: "View on GitHub" }
  },
  {
    title: "ニコニコ生放送コメントビュワー",
    description: "Protocol Bufferを利用してリアルタイムにコメントを取得・表示するクライアントアプリケーション",
    technologies: [
      { name: "Rust", color: "orange" },
      { name: "Protocol Buffer", color: "purple" }
    ],
    link: { url: "https://github.com/toof-jp/ndgr-client", text: "View on GitHub" }
  },
  {
    title: "Markdown日記テンプレートジェネレーター",
    description: "RustをWebAssemblyにコンパイルし、Reactから利用するWebアプリケーション。Webフロントエンドでネイティブに近いパフォーマンスを実現。",
    technologies: [
      { name: "Rust", color: "orange" },
      { name: "WebAssembly", color: "yellow" },
      { name: "React", color: "blue" }
    ],
    link: { url: "https://github.com/toof-jp/diary-template-generator", text: "Rust" }
  }
];
---

<section id="projects" class="py-16 bg-gray-100">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12">Projects</h2>
    
    <!-- Main Projects -->
    <div class="space-y-8 mb-12">
      {mainProjects.map((project) => (
        <ProjectCard project={project} client:load />
      ))}
    </div>

    <!-- Other Projects -->
    <h3 class="text-2xl font-bold mb-6">Rustによる多様なツール・アプリケーション開発</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {otherProjects.map((project) => (
        <SmallProjectCard project={project} client:load />
      ))}
    </div>

    <!-- More Projects Link -->
    <div class="text-center mt-8">
      <a href="https://github.com/toof-jp?tab=repositories" target="_blank" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
        <span>その他の制作物はGitHubで</span>
        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>